

<div class="panel panel-default">

<div class="panel-heading"> <!--panel body-->
<h2>Editar <%= resource_name.to_s.humanize %></h2>
</div>

 <div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group" > <!--clase form-group necesario para usar un froim control-->
    <%= f.label :Correo_electronico %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %> <!--form control alarga la caja de texto-->
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group"> <!--clase form-group necesario para usar un froim control-->
    <%= f.label :Contraseña %> <i>(Deje en blanco si no desea cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off",  class: 'form-control' %> <!--form control alarga la caja de texto-->
    <% if @minimum_password_length %>

      <em><%= @minimum_password_length %> Caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field form-group"> <!-- clase form-group necesario para usar un froim control-->
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %> <!--form control alarga la caja de texto-->
  </div>

  <div class="field form-group">
    <%= f.label :contraseña_actual %> <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %> <!--form control alarga la caja de texto-->
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class: 'btn btn-primary' %>
  </div>
<% end %>

</div> <!--panel body-->

<div class="panel-footer"> <!--div pie de panel--->
<h3>Borrar mi cuenta :( </h3>

<p>:'( <%= button_to "Borrar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete,  class: 'btn btn-warning' %></p>

<%= link_to "Regresar", :back %>
</div> <!---div pie del panel --->


</div> <!--div default panel--->
